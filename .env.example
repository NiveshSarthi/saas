# =============================================
# Environment Configuration for Tracker Recovery
# =============================================
# Copy this file to .env and fill in your values
#
# For Docker/Coolify deployment:
#   - Set NODE_ENV=production
#   - Provide MONGODB_URI (required)
#   - VITE_* variables are only needed at BUILD TIME

# =============================================
# SERVER CONFIGURATION
# =============================================

# Environment mode: 'development' or 'production'
# In production, server serves static frontend files from /dist
NODE_ENV=development

# Port for the backend Express server (default: 3000)
PORT=3000

# =============================================
# CORS CONFIGURATION
# =============================================

# Comma-separated list of allowed origins for CORS
# In development, all origins are allowed by default
# In production, set this to your frontend URLs
# Use * to allow all origins (not recommended for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================
# DATABASE
# =============================================

# MongoDB connection URI
# For local development: mongodb://127.0.0.1:27017/sarthi_task_tracker
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
# If not set, falls back to in-memory MongoDB (for development/testing only)
MONGODB_URI=mongodb://127.0.0.1:27017/sarthi_task_tracker

# =============================================
# AI / OPENAI CONFIGURATION
# =============================================

# OpenAI API Key for AI-powered features (task suggestions, standup generation, etc.)
# Get your key from: https://platform.openai.com/api-keys
# Optional: If not provided, AI features will return mock/empty responses
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================
# FRONTEND (VITE) CONFIGURATION
# =============================================
# Note: Vite environment variables must be prefixed with VITE_

# Application ID
VITE_APP_ID=tracker-recovery

# Backend API URL
VITE_BACKEND_URL=http://localhost:3000
